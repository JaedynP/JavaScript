for var its a Khanacademy challenge so its funnier so dont copy and paste this code just type it and mess around with it!:
var eSz = 4;

var tHt = 456;

ellipse(150, 70, 60, 120);  // left ear
ellipse(240, 70, 60, 120);  // right ear

ellipse(200, 170, 150, 150);    // face

fill(0, 0, 0);
ellipse(170, 150, eSz, eSz);  // left eye
ellipse(230, 150, eSz, eSz);  // right eye

line(150, 200, 250, 200);   // mouth

noFill();
rect(185, 200, 15, tHt); // left tooth
rect(200, 200, 15, tHt); // right tooth

